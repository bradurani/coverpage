@model coverpage.data.User

@{
    ViewBag.Title = "EditAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditAccount</h2>
<h3></h3><br />
@using (Html.BeginForm("EditAccount", "Account"))
{
    @Html.ValidationSummary()
    <span>First Name:</span> @Html.TextBoxFor(m => m.first_name) @Html.ValidationMessageFor(m => m.first_name) <br />
    <span>Last name:</span>@Html.TextBoxFor(m => m.last_name) @Html.ValidationMessageFor(m => m.last_name)<br />
    <span>Email:</span>@Html.TextBoxFor(m => m.email) @Html.ValidationMessageFor(m => m.email)<br />
    <span>Phone:</span> @Html.TextBoxFor(m => m.phone) @Html.ValidationMessageFor(m => m.phone)<br />
    <span>Password:</span>@Html.PasswordFor(m => m.password) @Html.ValidationMessageFor(m => m.password)<br />
    <input type="submit" value="Register!" />
}